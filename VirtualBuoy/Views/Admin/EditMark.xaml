<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Views.Admin.EditMark"
             Shell.PresentationMode="ModalAnimated">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Label Text="Mark Name"
                VerticalOptions="Center"
                HorizontalOptions="StartAndExpand" />
            <Entry Keyboard="Plain"  VerticalOptions="Center" HorizontalOptions="FillAndExpand" Text="{Binding Name}" />
            <Label Text="Lat"
                VerticalOptions="Center"
                HorizontalOptions="StartAndExpand" />

            <Entry Keyboard="Numeric"  VerticalOptions="Center" HorizontalOptions="FillAndExpand" Text="{Binding Lat}" />
            <Label Text="Lon"
                VerticalOptions="Center"
                HorizontalOptions="StartAndExpand" />

            <Entry Keyboard="Numeric"  VerticalOptions="Center" HorizontalOptions="FillAndExpand" Text="{Binding Lon}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>